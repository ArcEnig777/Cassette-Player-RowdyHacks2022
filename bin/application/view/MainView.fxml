      <Button fx:id="chooseFileButton" layoutX="15.0" layoutY="130.0" mnemonicParsing="false" onAction="#openFile" prefHeight="52.0" prefWidth="102.0" text="Choose Directory" textAlignment="CENTER" wrapText="true" />
