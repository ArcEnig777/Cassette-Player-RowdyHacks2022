         <children>
            <Button fx:id="oneFiveButton" mnemonicParsing="false" onAction="#oneFiveTimes" prefWidth="70.0" text="1.5x">
               <font>
                  <Font size="20.0" />
               </font></Button>
            <Button fx:id="twoButton" mnemonicParsing="false" onAction="#twoTimes" prefWidth="70.0" text="2x">
               <font>
                  <Font size="20.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
